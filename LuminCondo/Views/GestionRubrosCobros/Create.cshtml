@model Infraestructure.Models.GestionRubrosCobros

@{
    ViewBag.Title = "Crear Nuevo Rubro";
}

<div data-aos="fade-up">
    <h2>@ViewBag.Title</h2>


    @using (Html.BeginForm("Guardar", "GestionRubrosCobros", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Gestion de los Rubros de Cobro</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="input-group mb-3">
                                <span class="input-group-text">&cent;</span>
                                @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="btn-group" role="group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a href="@Url.Action("Index","GestionRubrosCobros")" class="btn btn-primary">
                        Regresar al listado
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
