@model IEnumerable<Infraestructure.Models.Personas>

<button class="btn btn-primary" onclick="CrearPersona()"><i class="fa-solid fa-plus"></i> Añadir Nueva Persona</button>

<table class="table table-hover">
    <tr>
        <th>Cédula</th>
        <th>Nombre</th>
        <th>Tipo de Permiso</th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @if (item.tipo == true)
                {
                    <p>Residente</p>
                }
                else
                {
                    <p>Invitado</p>
                }
            </td>
            <td>
                <div class="text-center">
                    <a href="@Url.Action("EditCarro","ListaResidencias", new { id = item.IDCedula })" class="btn btn-primary">
                        Modificar
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
