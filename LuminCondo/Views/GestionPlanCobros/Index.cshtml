@model IEnumerable<Infraestructure.Models.GestionPlanCobros>

@{
    ViewBag.Title = "Listado de Planes";
}
<div class="text-center" data-aos="fade-up">
    <h2>Listado de Planes</h2>
</div>


@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="col-lg-12">
    <div id="resultado" class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 text-center editCard" data-aos="fade-up">
                <div class="card">
                    <div class="card-body" style="background-color: #515151e9; height: 400px;">
                        <div class="card-body text-center">
                            <div class="text-center">
                                <img src="~/Assets/Logo LuminCondo.jpg" class=" contentImg1" alt="...">
                            </div>
                        </div>
                        <h6 class="card-title" style="font-size: 28px; font-weight: 50; color: #0CB0BB;">Plan @Html.DisplayFor(modelItem => item.descripcion)</h6>
                        <div class="text-center">
                            <button class="btn btn-primary" onclick="DetallePlan('@item.IDPlan')"><i class="fa-solid fa-circle-info"></i> Detalles</button>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal" tabindex="-1" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content"style="color:#fff">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script type="text/javascript">

        

        function DetallePlan(idPlan) {
            var id = idPlan;
            $.ajax({
                method: 'POST',
                url: '/GestionAsignacionPlanes/_PartialViewDetails',
                data: { 'id': id },
                success: function (response) {
                    $('.modal-body').html('');
                    $('.modal-body').html(response);
                    $('#myModal').modal('show');
                }, error: function (xhr, status, error) {
                    console.log('Error' + error + ',No Error' + xhr.status);
                }
            })
        }

        

    </script>
}


