@model IEnumerable<Infraestructure.Models.GestionPlanCobros>

@{
    ViewBag.Title = "Listado de Planes";
}
<div class="text-center">
    <h2>Listado de Planes</h2>
</div>


@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="col-lg-12">
    <div id="resultado" class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Plan @Html.DisplayFor(modelItem => item.IDPlan)</h5>
                        <p class="card-text" style="font-size: 28px; font-weight: 500; color: #F47A00;"> @Html.DisplayFor(modelItem => item.descripcion)</p>
                        <h6 class="card-subtitle mb-2 text-muted"> <i class="fa-solid fa-circle-user"></i> @Html.ActionLink("Detalles del Plan", "Details", new { id = item.IDPlan })</h6>
                        <div class="card-body">

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


