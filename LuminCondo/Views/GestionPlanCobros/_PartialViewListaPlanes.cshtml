@model IEnumerable<Infraestructure.Models.GestionPlanCobros>

<div data-aos="fade-up">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @{ decimal total = 0;}
                    @foreach (var rubro in item.GestionRubrosCobros)
                    {
                        total += rubro.monto;
                    }
                    <i class="fa-solid fa-colon-sign"></i> @total.ToString("N2")
                </td>
                <td>
                    <div class="btn-group text-center" role="group">
                        <button class="btn btn-primary" onclick="ActualizarPlan('@item.IDPlan')"><i class="fa-solid fa-plus"></i> Modificar</button>
                        <button class="btn btn-secondary" onclick="DetallePlan('@item.IDPlan')"><i class="fa-solid fa-circle-info"></i> Detalles</button>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
@if (ViewBag.NotificationMessage != null)
{
    <script>
            @Html.Raw(ViewBag.NotificationMessage)
    </script>
}