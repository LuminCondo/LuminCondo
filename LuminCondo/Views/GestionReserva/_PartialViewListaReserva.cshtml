@model IEnumerable<Infraestructure.Models.GestionReservas>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuarios.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Espacios.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Espacios.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @if (item.estado==true)
            {
                <p>Aceptado</p>
            }
            else
            {
                <p>Rechazado</p>
            }
        </td>
        <td>
            <div class="btn-group" role="group">
                <button class="btn btn-primary" onclick="DetalleReserva('@item.IDReserva')"><i class="fa-solid fa-circle-info"></i> Detalles</button>
                <button class="btn btn-secondary" onclick="ActualizarReserva('@item.IDReserva')">Modificar</button>
            </div>
        </td>
    </tr>
}

</table>
