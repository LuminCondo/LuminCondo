@model Infraestructure.Models.ReporteIncidencias

@{
    ViewBag.Title = "Crear Reporte de Incidencia";
}

<div data-aos="fade-up">

    <h2 class="text-center">@ViewBag.Title</h2>


    @using (Html.BeginForm("Guardar", "ReporteIncidencias", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDIncidencia)

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" onclick="GuardarIncidencia()"><i class="fa-solid fa-plus"></i> Añadir Nuevo Reporte de Incidencia</button>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
